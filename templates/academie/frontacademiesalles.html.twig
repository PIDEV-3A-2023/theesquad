 {% extends '../baseFront.html.twig' %}

        {% block body %}
             {% for s in salles %}
                  <div class="container">
                  <div class="feature-post small-blog">
                     <div class="col-md-5">
                
                     </div>
                     <div class="col-md-7">
                        <div class="feature-cont">
                           <div class="post-info">
                              
                                 <h2 ><Font color="#30458B"><B>{{s.nom}}</B></Font></h2>
                               
                              
                           </div>
                           <div class="post-heading">
                              <h4><B>Capacite: </B>{{s.capacite}}</B></h4>
                              <h4> <b>Equipement: </b>{{s.equipement}}</h4>
                             
                              
                              <div class="full" >
                              
                                 <a class="btn" style="background-color:#30458B; border-color:#daeee5; color:#daeee5" 
                                  href="{{ path('affichage_salles_cours_front', {'id': s.id}) }}">Details</a>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
              </div>

            {% endfor %}
        {% endblock %}

