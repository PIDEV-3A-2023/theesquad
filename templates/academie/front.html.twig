{% extends 'baseFront.html.twig' %}
        {% block body %}
        <h1> les académies </h1>
         <a href="{{ path('orderByNom')}}">
                <button type="button" class="btn btn-success rounded-pill">Academies triés par nom </button>
                </a> 
            {% for a in academie %}
               <div class="container">
                    <div class="feature-post small-blog">
                        <div class="col-md-7">
                            <div class="feature-cont">
                                <div class="post-info">
                                   <h2 ><Font color="#30458B"><B>{{a.nom}}</B></Font></h2> 
                                   <h5><B>Adresse : </B>{{a.adresse}}</B></h5>
                                   <h5> <b>Numéro de téléphone : </b>{{a.numtel}}</h5>
                                   <h5><b>Sport proposé :</b> {{a.sportpropose}}</h5> 
                                </div>
                            </div>
                             <a class="btn" style="background-color:#30458B; border-color:#daeee5; color:#daeee5" 
                                  href="{{path("affichage_academie_salle_front", {id: a.id})}}">Details</a>
                          <a class="btn" style="background-color:#30458B; border-color:#daeee5; color:#daeee5" href="">Participer</a>

                        </div>
                    </div>
                </div>
                       
            {% endfor %}

        {% endblock %}