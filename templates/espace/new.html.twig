{% extends 'client/dashboardClient.html.twig' %}

{% block client %}
</style>

   
<div class="container">
  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <div class="row">
        <div class="col-lg-12">
          <div class="p-5">
            <div class="text-center mb-4">
              <h1 class="h4 text-gray-900">Créer un espace</h1>
            </div>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'user'}}) }}
              <div class="form-group row mb-3">
                <div class="col-sm-6 mb-sm-0">
                  {% if form_errors(form.nom) is not empty %}
                    <div class="alert alert-danger">
                      {{ form_errors(form.nom) }}
                    </div>
                  {% endif %}
                  {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Nom'}}) }}
                </div>
                <div class="form-group col-md-6">
                  {% if form_errors(form.caracteristique) is not empty %}
                    <div class="alert alert-danger">
                      {{ form_errors(form.caracteristique) }}
                    </div>
                  {% endif %}
                  {{ form_widget(form.caracteristique, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Caractéristiques'}}) }}
                </div>
              </div>
              <div class="form-group mb-3">
                {% if form_errors(form.adresse) is not empty %}
                  <div class="alert alert-danger">
                    {{ form_errors(form.adresse) }}
                  </div>
                {% endif %}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Adresse'}}) }}   
              </div>
              <div class="form-group mb-3">
                {% if form_errors(form.dispo) is not empty %}
                  <div class="alert alert-danger">
                    {{ form_errors(form.dispo) }}
                  </div>
                {% endif %}
                {{ form_widget(form.dispo, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Disponibilité'}}) }}   
              </div>
              <div class="form-group mb-3">
                {% if form_errors(form.prixlocation) is not empty %}
                  <div class="alert alert-danger">
                    {{ form_errors(form.prixlocation) }}
                  </div>
                {% endif %}
                {{ form_widget(form.prixlocation, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Prix de location'}}) }}   
              </div>
              <div class="form-group mb-3">
                <div class="d-flex">
                  <div style="margin-top: 6px;">{{ form_label(form.tarifhoraire, 'Tarif horaire') }}</div>
                  {{ form_widget(form.tarifhoraire, {'attr': {'class': 'form-control'}}) }} 
                  {% if form_errors(form.tarifhoraire) is not empty %}
                    <div class="alert alert-danger">
                      {{ form_errors(form.tarifhoraire) }}
                    </div>
                  {% endif %}
                </div>
              </div>
              
          
              {{ form_row(form.image) }}
              <div class="form-group mb-3">
                {{ form_widget(form.categorielocation, {'attr': {'class': 'form-control'}, 'choice_label': 'nom'}) }}
              </div>
             

              

       

                                <button class="btn btn-primary btn-user btn-block">{{ button_label|default('Enregistrer') }}</button>

                                {# <a href="login.html" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </a> #}
                                <hr>
                               
                            {{ form_end(form) }} 
                            <hr>
                            <div class="text-center">
                                    <a href="{{ path('app_espace_index') }}">Retour à la liste</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
