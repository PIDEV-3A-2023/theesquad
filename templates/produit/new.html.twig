{% extends 'admin/dashboardAdmin.html.twig' %}

{% block admin %}
    <style>
        #evenement_date_month{
            border: 1px solid #d1d3e2;
            width: 150px;
            border-radius: 5px;
        }

        #evenement_date_day{
            border: 1px solid #d1d3e2;
            width: 150px;
            border-radius: 5px;
        }

        #evenement_date_year{
            border: 1px solid #d1d3e2;
            width: 150px;
            border-radius: 5px;
        }

        #evenement_date{
            border : transparent;
        }

    </style>

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Ajouter un Produit</h1>
                            </div>
                            {{form_start(form,{'attr':{'novalidate':'novalidate' , 'class' : 'user' }})}}

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {% if form_errors(form.nom) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.nom) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.nom,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'nom' } }) }}
                                </div>

                                <div class="col-sm-6">
                                    {% if form_errors(form.description) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.description) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.description,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Description'} }) }}
                                </div>

                            </div>



                            <div class="form-group">
                                {% if form_errors(form.prix) is not empty %}
                                    <div class="alert alert-danger" >
                                        {{ form_errors(form.prix) }}
                                    </div>
                                {% endif %}
                                {{ form_widget(form.prix,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Prix'} }) }}
                            </div>

                            <div class="form-group">
                                    {% if form_errors(form.category) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.category) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.category,{ 'attr': {'class': 'form-control'} }) }}
                                </div>


                            {{ form_row(form.image) }}

                            <button class="btn btn-primary btn-user btn-block">{{ button_label|default('Save') }}</button>

                            {# <a href="login.html" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </a> #}
                            <hr>

                            {{ form_end(form) }}
                            <hr>
                            <div class="text-center">
                                <a href="{{ path('app_produit_index') }}">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
