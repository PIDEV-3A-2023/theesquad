 {% extends 'baseFront.html.twig' %}
{% block title %}Les salles{% endblock %}
{% block body %}
<h1> les salles </h1>
    {% for salle in salle %}
        <div class="container">
             <div class="feature-post small-blog text-center"> 
                <div class="col-md-7">
                    <div class="feature-cont text-center"> 
                        <div class="post-info text-center">
                            <h2><font color="#30458B"><b>{{ salle.nom }}</b></font></h2>
                            <p><b>Capacite :   </b>{{ salle.capacite}} </p>
                            <p><b>Equipement : </b>{{ salle.equipement }}</p>
                               <p><b>Academie : </b>{{ salle.academie.nom }}</p>
                           

                        </div>
                        <div class="post-heading">
                            <div class="full">
                                <a class="btn" style="background-color:#30458B; border-color:#daeee5; color:#daeee5" href="{{path('affichage_cours_front')}}">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
  