{% extends 'admin/dashboardAdmin.html.twig' %}


{% block admin %}
 

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Ajouter une salle</h1>
                            </div>
                            {{form_start(form,{'attr':{'novalidate':'novalidate' , 'class' : 'user' }})}}

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                  {% if form_errors(form.nom) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.nom) }}
                                        </div>
                                    {% endif %} 
                                    {{ form_widget(form.nom,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'nom' } }) }}
                                </div>

                                <div class="col-sm-6">
                                    {% if form_errors(form.capacite) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.capacite) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.capacite,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'capacite'} }) }}
                                </div>

                            </div>

                            <div class="form-group">
                                {% if form_errors(form.equipement) is not empty %}
                                    <div class="alert alert-danger" >
                                        {{ form_errors(form.equipement) }}
                                    </div>
                                {% endif %}
                                {{ form_widget(form.equipement,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'equipement'} }) }}
                            </div>

                           <div class="form-group mb-3">
                {{ form_widget(form.academie, {'attr': {'class': 'form-control'}, 'choice_label': 'nom'}) }}
              </div>


                            <button class="btn btn-primary btn-user btn-block">{{ button_label|default('Save') }}</button>

                         
                            <hr>

                            {{ form_end(form) }}
                            <hr>
                            <div class="text-center">
                                <a href="{{ path('app_salle_index') }}">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}