
{% extends 'admin/dashboardAdmin.html.twig' %}


{% block admin %}


   <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Modifier un cours!</h1>
                            </div>
                             {{form_start(form,{'attr':{'novalidate':'novalidate' , 'class' : 'user' }})}}

                             <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                 {{ form_widget(form.nom,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'nom' } }) }} 
                                    
                                    {% if form_errors(form.nom) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.nom) }}
                                        </div>
                                    {% endif %}
                                </div>

                         
                                 <div class="col-sm-6">
                             {{ form_widget(form.date,{ 'attr': {'class': 'form-control form-control-user','placeholder' : 'date'} }) }}

                                {% if form_errors(form.date) is not empty %}
                                    <div class="alert alert-danger" >
                                    {{ form_errors(form.date) }}
                                </div>
                                {% endif %}
                                    </div>
                                
                            </div> 
                         


                                <div class="form-group">
                                {{ form_widget(form.duree,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'duree'} }) }}   
                                  {% if form_errors(form.duree) is not empty %}
                                                    <div class="alert alert-danger" >
                                                    {{ form_errors(form.duree) }}
                                                </div>
                                                {% endif %}
                                </div>
                                 <div class="form-group">
                                {% if form_errors(form.nbparticipants) is not empty %}
                                    <div class="alert alert-danger" >
                                        {{ form_errors(form.nbparticipants) }}
                                    </div>
                                {% endif %}
                                {{ form_widget(form.nbparticipants,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'nbparticipants'} }) }}
                            </div>
                                   <div class="form-group">
                             {{ form_widget(form.salle, { 'attr': {'class': 'form-control'}, 'choice_label': 'nom'}) }}

                                {% if form_errors(form.salle) is not empty %}
                                    <div class="alert alert-danger" >
                                    {{ form_errors(form.salle) }}
                                </div>
                                {% endif %}
                                    </div>
                                

                                 
                                <button class="btn btn-primary btn-user btn-block">{{ button_label|default('Update') }}</button>
                                <hr> 
                               
                            {{ form_end(form) }} 
                            <hr>
                            <div class="text-center">
                                    <a href="{{ path('app_cours_index') }}">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
 