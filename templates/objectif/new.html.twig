{% extends 'admin/dashboardAdmin.html.twig' %}

{% block admin %}
    <style>
        #evenement_date_month{
            border: 1px solid #d1d3e2;
            width: 150px;
            border-radius: 5px;
        }

        #evenement_date_day{
            border: 1px solid #d1d3e2;
            width: 150px;
            border-radius: 5px;
        }

        #evenement_date_year{
            border: 1px solid #d1d3e2;
            width: 150px;
            border-radius: 5px;
        }

        #evenement_date{
            border : transparent;
        }

    </style>

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Objectif!</h1>
                            </div>
                            {{form_start(form,{'attr':{'novalidate':'novalidate' , 'class' : 'user' }})}}

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {% if form_errors(form.PoidsDes) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.PoidsDes) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.PoidsDes,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'PoidsDes' } }) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {% if form_errors(form.CalCons) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.CalCons) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.CalCons,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Calorie Recommand√©' } }) }}
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {% if form_errors(form.TypeReg) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.TypeReg) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.TypeReg,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'TypeReg' } }) }}
                                </div>
                                Mettez 1 pour diminuer le poids et 2 pour l'augmentation

                                <div class="col-sm-3">
                                    {% if form_errors(form.Age) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.Age) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.Age,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Age' } }) }}
                                </div>

                                <div class="col-sm-3">
                                    {% if form_errors(form.Sexe) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.Sexe) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.Sexe,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Sexe' } }) }}
                                </div>

                                <div class="col-sm-3">
                                    {% if form_errors(form.Poids) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.Poids) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.Poids,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Poids' } }) }}
                                </div>

                                <div class="col-sm-3">
                                    {% if form_errors(form.Taille) is not empty %}
                                        <div class="alert alert-danger" >
                                            {{ form_errors(form.Taille) }}
                                        </div>
                                    {% endif %}
                                    {{ form_widget(form.Taille,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Taille' } }) }}
                                </div>

                            </div>

                        </div>











                            {# <a href="login.html" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </a> #}
                            <button class="btn btn-primary btn-user btn-block">{{ button_label|default('Save') }}</button>

                            <hr>

                            {{ form_end(form) }}
                            <hr>
                            <div class="text-center">
                                <a href="{{ path('app_objectif_index') }}">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}
