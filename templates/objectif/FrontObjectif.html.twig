{% extends 'baseFront.html.twig' %}

        {% block body %}

            <div class="container">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Suivre un régime</h1>
                                    </div>
                                    {{form_start(form,{'attr':{'novalidate':'novalidate' , 'class' : 'user' }})}}


                                    <div class="form-group row">

                                        <div class="col-sm-3">
                                            {% if form_errors(form.PoidsDes) is not empty %}
                                                <div class="alert alert-danger" >
                                                    {{ form_errors(form.PoidsDes) }}
                                                </div>
                                            {% endif %}
                                            {{ form_widget(form.PoidsDes,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Poids Désiré'} }) }}
                                        </div>



                                        </div>


                                      <div class="col-sm-3">
                                                {% if form_errors(form.TypeReg) is not empty %}
                                                    <div class="alert alert-danger" >
                                                        {{ form_errors(form.TypeReg) }}
                                                    </div>
                                                {% endif %}
                                                {{ form_widget(form.TypeReg,{ 'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'TypeReg' } }) }}
                                            </div>
                                            Mettez 1 pour diminuer le poids et 2 pour l'augmentation




                                    <button class="btn btn-primary btn-user btn-block">{{ button_label|default('Suivre ') }}</button>

                                    {# <a href="login.html" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </a> #}

                                    <div class="text-center">
                                        <a href="{{ path('app_routine_index') }}">back to list</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>







        {% endblock %}

