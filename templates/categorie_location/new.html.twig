{% extends 'client/dashboardClient.html.twig' %}

{% block client %}
 <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">créer une catégorie de location</h1>
                            </div>
                             {{form_start(form,{'attr':{'novalidate':'novalidate' , 'class' : 'user' }})}}

                           <div class="form-row">
    <div class="form-group col-md-6">
    {% if form_errors(form.nom) is not empty %}
        <div class="alert alert-danger" >
            {{ form_errors(form.nom) }}
        </div>
        {% endif %}
        {{ form_widget(form.nom, { 'attr': {'class': 'form-control form-control-user', 'placeholder' : 'nom' } }) }}
    </div>
    <div class="form-group col-md-6">
        {% if form_errors(form.description) is not empty %}
            <div class="alert alert-danger" >
                {{ form_errors(form.description) }}
            </div>
        {% endif %}
        {{ form_widget(form.description, { 'attr': {'class': 'form-control form-control-user', 'placeholder' : 'description' } }) }}
    </div>
</div>


                          
<div class="text-center">
    <button type="submit" class="btn btn-primary">Enregistrer</button>
</div>

                                {# <a href="login.html" class="btn btn-primary btn-user btn-block">
                                    Register Account
                                </a> #}
                                <hr>
                               
                            {{ form_end(form) }} 
                            <hr>
                            <div class="text-center">
                                    <a href="{{ path('app_categorie_location_index') }}">back to list</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
